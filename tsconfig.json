{
  "include": [
      "openpromise.ts"
  ],
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",

    "lib": [
      "ES2020"
    ],

    "allowJs": true,
    "checkJs": true,

    // Generate d.ts files
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "outDir": "./dist/",
    "baseUrl": "./",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}
